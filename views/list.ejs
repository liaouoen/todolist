
<%- include('header'); -%>

<body>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for (let i = 0; i < listOfItems.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= listOfItems[i] %></p>
        </div>
        <% } %>

        <div>
            <form class="form" action="/" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required="required">
                <button type="submit" name="list" value="<%=listTitle%>">+</button>
            </form>
        </div>
    </div>
</body>

</html>